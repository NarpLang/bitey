#!/bin/bash
set -e

VERSION=1.8

BITEY=/usr/bitey

if [[ "$1" == "install" ]]; then
    if [[ -f "$BITEY/lock" ]]; then
        echo "ğŸ”’ Bitey is locked. Run 'sudo bitey unlock' to remove the lock."
        exit 1
    fi
    sudo touch "$BITEY/lock"

    if [[ ! -d "$BITEY/software" ]]; then
        mkdir "$BITEY/software"
    fi

    REMOTE_NAME="$2"
    shift 2  # Remove the first two args (install + remote)

    for SOFTWARE_NAME in "$@"; do
        REMOTE_ADDON="$BITEY/addons/remote-$REMOTE_NAME"
        INSTALL_PATH="$BITEY/software/$SOFTWARE_NAME"

        if [[ ! -f "$REMOTE_ADDON/remote.sh" ]]; then
            echo "âŒ Bitzy doesn't know where to go... (Remote '$REMOTE_NAME' not found or invalid.)"
            exit 1
        fi

        source "$REMOTE_ADDON/remote.sh"

        if [[ -z "$REMOTE" ]]; then
            echo "âŒ Bitzy doesn't know where to go, nothing on the information paper... (REMOTE variable not set in $REMOTE_ADDON/remote.sh.)"
            exit 1
        fi

        if [[ -d "$INSTALL_PATH" ]]; then
            echo "âš ï¸ Bitzy found out that $SOFTWARE_NAME is already installed at $INSTALL_PATH. Skipping..."
            continue
        fi

        echo "ğŸ“¦ Bitzy is installing $SOFTWARE_NAME..."
        sudo git clone "$REMOTE/$SOFTWARE_NAME" "$INSTALL_PATH" || {
            echo "âŒ Installation failure."
            exit 1
        }

        cd "$INSTALL_PATH" || exit 1

        if [[ ! -f project/paths.txt ]]; then
            echo "âŒ Installation invalid."
            rm -rf "$INSTALL_PATH"
            exit 1
        fi

        DEPENDS_FILE="project/depends.txt"
        if [[ -f "$DEPENDS_FILE" ]]; then
            source "$DEPENDS_FILE"
            sudo bitey unlock
            for dep in "${DEPENDS[@]}"; do
                echo "ğŸ“¦ Installing dependency $dep..."
                sudo bitey install "$dep"
            done
            sudo bitey lock
        fi

        sudo bash "project/install.sh"
        sudo chmod +x "$INSTALL_PATH/bin/"*
        echo "$INSTALL_PATH" | sudo tee -a "$BITEY/project/bitey_paths"
        echo "$INSTALL_PATH/bin" | sudo tee -a "$BITEY/project/biteyrc"
        echo "âœ… Bitzy installed $SOFTWARE_NAME."

        cd - > /dev/null
    done

    sudo rm "$BITEY/lock"
    exit 0
fi

if [[ "$1" == "remove" ]]; then
    if [[ -f "$BITEY/lock" ]]; then
        echo "ğŸ”’ Bitey is locked. Run 'sudo bitey unlock' to remove the lock."
        exit 1
    fi
    sudo touch "$BITEY/lock"
    shift 1  # Remove "remove" argument

    for SOFTWARE_NAME in "$@"; do
        INSTALL_PATH="$BITEY/software/$SOFTWARE_NAME"

        if [[ ! -d "$INSTALL_PATH" ]]; then
            echo "âŒ Bitzy thinks $SOFTWARE_NAME is not installed."
            continue
        fi

        cd "$INSTALL_PATH" || continue

        if [[ -f project/remove.sh ]]; then
            echo "ğŸ”§ Bitzy is running remove script for $SOFTWARE_NAME..."
            sudo bash "project/remove.sh"
        else
            echo "âš ï¸ Bitzy didn't find a remove script, continuing with raw removal."
        fi

        echo "ğŸ—‘ï¸ Bitzy is removing $SOFTWARE_NAME..."
        sudo rm -rf "$INSTALL_PATH"

        # Clean bitey_paths and biteyrc
        sudo sed -i "\|$INSTALL_PATH\$|d" "$BITEY/project/bitey_paths"
        sudo sed -i "\|$INSTALL_PATH/bin\$|d" "$BITEY/project/biteyrc"

        echo "âœ… Bitzy removed $SOFTWARE_NAME."
        cd - > /dev/null
    done

    sudo rm "$BITEY/lock"
    exit 0
fi

if [[ "$1" == "update" ]]; then
    if [[ -f "$BITEY/lock" ]]; then
        echo "ğŸ”’ Bitey is locked. Run 'sudo bitey unlock' to remove the lock."
        exit 1
    fi
    sudo touch "$BITEY/lock"
    mapfile -t BITEYRC < $BITEY/project/biteyrc
    mapfile -t BITEY_PATHS < $BITEY/project/bitey_paths
    for path in "${BITEY_PATHS[@]}"; do
        if [ -d "$path" ]; then
            cd "$path" || continue
            
            echo "ğŸ”„ Bitzy is updating path $path..."
            sudo git reset --hard HEAD
            sudo git pull
            sudo chmod +x bin/*
            if [[ -f project/update.sh ]]; then
                echo "ğŸ”§ Bitzy is running update script..."
                sudo bash "project/update.sh"
            fi
            cd - > /dev/null || exit 0
        fi
    done
    printf "%s\n" "${BITEY_PATHS[@]}" | sudo tee "$BITEY/project/bitey_paths" > /dev/null
    printf "%s\n" "${BITEYRC[@]}" | sudo tee "$BITEY/project/biteyrc" > /dev/null
    sudo rm "$BITEY/lock"
    exit 0
fi

if [[ "$1" == "list" ]]; then
    INSTALL_DIR="/usr/bitey/software"
    if [[ ! -d "$INSTALL_DIR" ]]; then
        echo "âŒ No packages installed."
        exit 1
    fi

    echo "ğŸ“¦ Installed Bitey packages:"
    for pkg in "$INSTALL_DIR"/*; do
        [[ -d "$pkg" ]] || continue
        pkgname=$(basename "$pkg")
        echo " - $pkgname"
    done

    exit 0
fi

if [[ $# -eq 0 ]]; then
    echo "ğŸ¶ Run 'bitey --help' for usage."
    exit 0
fi

if [[ "$1" == "--help" ]]; then
    echo "ğŸ¶ Hi, it's Bitzy! I wrote down some commands you need to know down here!"
    echo "ğŸ’¡ Bitey Help"
    echo "â¡ï¸ Usage: $0 [OPTIONS]"
    echo
    echo "ğŸ“¦ Packages:"
    echo "    install <remote> <package> - Install a package."
    echo "    remove <package> - Remove a package."
    echo "    list - List installed packages."
    echo "    update - Update all packages."
    echo "    info <package> - See the package information."
    echo "ğŸš Shell:"
    echo "    shell - Open a Bitey Shell session."
    echo "    reload - Reload the Shell."
    echo "    exit - Quit the Shell."
    echo "    clear - Clear the Shell."
    echo "ğŸ” Lock:"
    echo "    lock - Lock Bitey."
    echo "    unlock - Unlock Bitey."
    echo "ğŸ’¿ Installation:"
    echo "    doctor - Analyze your installation of Bitey."
    echo "    repair - Repair your installation of Bitey."
    echo "    --version - Check the version of your Bitey Installation."
    echo "â“ Help:"
    echo "    --help - See the help message."
    echo
    echo "ğŸ¾ Tip: Use the Bitey Shell (run \`bitey shell\`) to manage everything faster!"
    exit 0
fi



if [[ "$1" == "--version" ]]; then
    echo "ğŸ« Bitey $VERSION"
    exit 0
fi

if [[ "$1" == "info" ]]; then
    PACKAGE="$2"
    PACKAGE_DIR="$BITEY/software/$PACKAGE"

    if [[ -z "$PACKAGE" ]]; then
        echo "âŒ Please provide a package name."
        exit 1
    fi

    if [[ ! -f "$PACKAGE_DIR/pak.conf" ]]; then
        echo "âŒ Package '$PACKAGE' is not installed."
        exit 1
    fi

    source "$PACKAGE_DIR/pak.conf"

    echo "ğŸ“¦ Package Info: $PACKAGE"
    echo "Name: ${PACKAGE_NAME:-$PACKAGE}"
    echo "Version: ${PACKAGE_VERSION:-Unknown}"
    echo "Maintainer: ${PACKAGE_MAINTAINER:-Unknown}"
    echo "Description: ${PACKAGE_DESCRIPTION:-No description}"
    echo "Location: $PACKAGE_DIR"
    exit 0
fi

if [[ "$1" == "lock" ]]; then
    if [[ -f "$BITEY/lock" ]]; then
        echo -e "ğŸ”’ Bitey is already locked.\nRun 'sudo bitey unlock' to remove the lock."
        exit 1
    fi
    sudo touch "$BITEY/lock"
    echo -e "ğŸ”’ Bitey has been locked.\nRun 'sudo bitey unlock' to remove the lock."
fi

if [[ "$1" == "unlock" ]]; then
    if [[ ! -f "$BITEY/lock" ]]; then
        echo -e "ğŸ”“ Bitey is already unlocked.\nRun 'sudo bitey lock' to create the lock."
    fi
    sudo rm "$BITEY/lock"
    echo -e "ğŸ”“ Bitey has been unlocked.\nRun 'sudo bitey lock' to create the lock."
fi

if [[ "$1" == "doctor" ]]; then
    echo "ğŸ©º Bitey Doctor Report"
    echo

    # Lock status
    if [[ -f "$BITEY/lock" ]]; then
        echo "ğŸ” Lock status:        âŒ Locked"
    else
        echo "ğŸ” Lock status:        âœ… Unlocked"
    fi

    # Bitey root directory
    if [[ -d "$BITEY" ]]; then
        echo "ğŸ“‚ BITEY directory:    âœ… $BITEY"
    else
        echo "ğŸ“‚ BITEY directory:    âŒ Not found"
    fi

    # Installed packages
    if [[ -d "$BITEY/software" ]]; then
        PKGS=$(ls "$BITEY/software" 2>/dev/null | wc -l)
        echo "ğŸ“¦ Installed packages: âœ… $PKGS packages found"
    else
        echo "ğŸ“¦ Installed packages: âŒ None"
    fi

    # Broken packages
    BROKEN_PKGS=0
    for pkg in "$BITEY/software"/*; do
        [[ -d "$pkg" ]] || continue
        PKGNAME=$(basename "$pkg")
        if [[ ! -f "$pkg/files/install.sh" && ! -f "$pkg/install.sh" ]]; then
            echo "ğŸ§© Broken package:     âŒ $PKGNAME (no install.sh)"
            BROKEN_PKGS=$((BROKEN_PKGS + 1))
        fi
    done
    [[ $BROKEN_PKGS -eq 0 ]] && echo "ğŸ§© Broken packages:    âœ… None"

    # Missing pak.conf check
    MISSING=0
    for pkg in "$BITEY/software/"*; do
        [[ -d "$pkg" ]] || continue
        if [[ ! -f "$pkg/pak.conf" ]]; then
            echo "ğŸ“‘ Missing pak.conf:   âŒ $(basename "$pkg")"
            MISSING=1
        fi
    done
    [[ $MISSING -eq 0 ]] && echo "ğŸ“‘ Missing pak.conf:   âœ… All present"

    # Disk usage
    USAGE=$(du -sh "$BITEY" 2>/dev/null | cut -f1)
    echo "ğŸ“ Disk usage:         ğŸ’¾ $USAGE used by Bitey"

    # Permission check
    if [[ "$(id -u)" -eq 0 ]]; then
        echo "ğŸ”§ Data access:        âœ… Safe (running as root)"
    elif [[ -w "$BITEY" ]]; then
        echo "ğŸ”§ Data access:        âš ï¸ Unsafe (use caution)"
    else
        echo "ğŸ”§ Data access:        âŒ None (no write access)"
    fi


    # Remotes
    if [[ -d "$BITEY/addons" ]]; then
        REMOTES=$(find "$BITEY/addons" -maxdepth 1 -type d -name "remote-*" | wc -l)
        if [[ "$REMOTES" -gt 0 ]]; then
            echo "ğŸŒ Remotes configured: âœ… $REMOTES remotes"
        else
            echo "ğŸŒ Remotes configured: âŒ None found"
        fi
    else
        echo "ğŸŒ Remotes configured: âŒ None found"
    fi

    echo
    echo "âœ… All checks complete."
    exit 0
fi

if [[ "$1" == "repair" ]]; then
    if [[ ! "$2" == "--nolock" ]]; then
        if [[ -f "$BITEY/lock" ]]; then
            echo "ğŸ”’ Bitey is locked. Run with '--nolock' if you are sure no proccess editing Bitey Data is present."
            exit 1
        fi
    fi

    echo "ğŸ›  Starting Bitey repair process..."
    sudo touch "$BITEY/lock"

    echo "ğŸ”„ Updating packages to fix real ones..."
    sudo bitey unlock
    sudo bitey update
    sudo bitey lock

    echo "ğŸ§¹ Cleaning up fake/broken packages..."
    for pkg in "$BITEY/software/"*; do
        [[ -d "$pkg" ]] || continue
        pkgname=$(basename "$pkg")

        if [[ -d "$pkg/.git" ]]; then
            pushd "$pkg" >/dev/null || continue
        if ! git pull --quiet; then
            echo "âŒ $pkgname is broken (git pull failed). Removing..."
            rm -rf "$pkg"
            sudo sed -i "\|$pkg\$|d" "$BITEY/project/bitey_paths"
            sudo sed -i "\|$pkg/bin\$|d" "$BITEY/project/biteyrc"
            popd >/dev/null
            continue
        fi
        popd >/dev/null
        fi

        # Check for missing install.sh or pak.conf
        if [[ ! -f "$pkg/install.sh" || ! -f "$pkg/pak.conf" ]]; then
            echo "âŒ $pkgname is fake or broken (missing install.sh or pak.conf). Removing..."
            rm -rf "$pkg"
            sudo sed -i "\|$pkg\$|d" "$BITEY/project/bitey_paths"
            sudo sed -i "\|$pkg/bin\$|d" "$BITEY/project/biteyrc"
        fi
    done



    echo "ğŸ”“ Unlocking Bitey..."
    sudo rm "$BITEY/lock"

    echo "âœ… Bitey repair complete. Sending doctor report..."
    sudo bitey doctor
    exit 0
fi

bitey_shell() {
  echo -e "ğŸ¶ Welcome to ğŸ« Bitey $VERSION Shell!\nType '--help' for Bitey Help."
  while true; do
    read -rp "ğŸ« bitey> " cmd
    set -o history
    case "$cmd" in
      exit)
        echo "ğŸ¶ Exiting Bitey Shell."
        break
        ;;
      clear)
        clear
        ;;
      reload)
        echo "ğŸ” Reloading Bitey Shell..."
        bitey_shell
        return 0
        ;;
      "")
        continue
        ;;
      *)
        sudo bitey $cmd
        ;;
    esac
  done
}

if [[ "$1" == "shell" ]]; then
    bitey_shell
    exit 0
fi
